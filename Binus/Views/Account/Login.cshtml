@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Favicon -->
    <link rel="Shortcut Icon" type="image/png" href="~/Content/images/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css">

    <script type="text/javascript" src="~/Content/js/development/vendor/jquery.js"></script>
</head>
<body>
    <div class="main-container">
        <section class="background">
            <div class="overlay"></div>
        </section>

        <section class="wrapper">
            <div class="login">
                <div class="login-head">
                    <div class="ribbon"></div>
                    <div class="logo">
                        <a class="site-name">
                            <img src="~/Content/images/logo.png" alt="Logo">
                        </a>
                        <span class="site-description">
                            People Innovation Excellence
                        </span>
                    </div>
                </div>
                <div class="login-body">
                    <form class="custom-form">

                        <div class="error-text" style="color: red;display:none;">Invalid username or password!</div>

                        <p>
                            <span class="custom-textbox">
                                <span class="icon-wrap">
                                    <i class="icon icon-user"></i>
                                </span>
                                <input type="text" name="input-username" placeholder="Username" />
                            </span>
                        </p>

                        <p>
                            <span class="custom-textbox">
                                <span class="icon-wrap">
                                    <i class="icon icon-pass"></i>
                                </span>
                                <input type="password" name="input-password" placeholder="Password" />
                            </span>
                        </p>

                        <p>
                            <button id="button-submit" class="button button-primary wide">Login</button>
                        </p>

                        <p>
                            <div class="text-center" style="color: red">
                                <strong id="error">
                                </strong>
                            </div>
                        </p>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <script type="text/javascript">
        const urlBimay= "http://bm5dev.binus.ac.id/adapi/api/activedirectory/Validate?key=4k00Mw04N6h9MkxZuX3217vnsmurhptKZhdZjFq5W43zDS2lj4CRZ7RyCfjwTK71";
        
        $("button").click(function(event) { event.preventDefault(); });

        $("#button-submit").click(function(){
            
            $.ajax({
                headers: {
                    "Content-Type": "application/json"
                },
                method : "POST",
                url: urlBimay,
                data : JSON.stringify({
                    "userName": $("input[name='input-username']").val(),
                    "Password": $("input[name='input-password']").val()
                }),    
                success : function(data){
                    if(data==="1") {
                        $.ajax({
                            method: "POST",
                            url: "/token",
                            data:
                            {
                                username: $("input[name='input-username']").val(),
                                password: $("input[name='input-password']").val(),
                                grant_type: "password"
                            },
                            success: function(data) {
                                sessionStorage.setItem("access_token",data.access_token);
                                window.location.href="/Account/Home";

                                $.ajaxSetup({
                                    headers: { "Authorization": "Bearer "+sessionStorage.getItem("access_token") }
                                });
                            }
                        });
                    }
                    else
                    {
                        $("input[name='input-username']").val("");
                        $("input[name='input-password']").val("");
                    }
                }
            }); 


        });
    </script>
</body>
</html>




