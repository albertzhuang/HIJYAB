
@{
    ViewBag.Title = "AssessmentSensory";
}

@*START ASSESSMENT SENSORY*@
<div id="assessment-sensory" class="assessment-sensory template" style="display: none;">
    <div class="sensories">
        @*START HEADER SENSORY*@
        <div class="row">
            <div class="col-md-1 text-center">
                No
            </div>
            <div class="col-md-10 text-left">
                Sensory
            </div>
            <div class="col-md-1 text-center">
                <span class="icon-add icon-button" id="button_add_sensory"></span>
            </div>
        </div>
        @*END HEADER SENSORY*@

        <div id="sensories-container">
            @*START SENSORY TEMPLATE*@
            <div class="row sensory template" style="display:none;">
                <div class="col-md-1 center-vertical">
                    <span class="sensory-no">XX</span>
                </div>
                <div class="col-md-10">
                    <span class="custom-statement">
                        <input type="text" name="input-sensory">
                        <span class="icon-area">
                            <span class="icon-reject remove-sensory"></span>
                        </span>
                    </span>
                </div>
            </div>
            @*END SENSORY TEMPLATE*@
        </div>
    </div>

    <p style="margin-top:30px;">
        <button id="button-finish" class="button button-primary">Finish</button>
        <button id="button-cancel" class="button button-orange" style="display:none;">Cancel</button>
    </p>

    <div class="statements-sensory">
        @*START HEADER STATEMENT SENSORY*@
        <div class="row">
            <div class="col-md-1 text-center">
                No
            </div>
            <div class="col-md-6">
                Statement
            </div>
            <div class="col-md-4">
                Sensory
            </div>
            <div class="col-md-1 text-center">
                <span class="icon-add icon-button" id="button_add_statement_sensory"></span>
            </div>
        </div>
        @*END HEADER STATEMENT SENSORY*@
        <div id="statements-sensory-container">
            @*START TEMPLATE STATEMENT SENSORY*@
            <div class="row statement-sensory template" style="display:none;">
                <div class="col-md-1 center-vertical">
                    <span class="statement-no">XX</span>
                </div>
                <div class="col-md-6">
                    <input type="text" name="input-sensory">
                </div>
                <div class="col-md-4">
                    <span class="custom-combobox">
                        <select name="test">
                            <option disabled selected value="0"> -- SELECT AN OPTION -- </option>
                        </select>
                    </span>
                </div>
                <div class="col-md-1 center-vertical">
                    <span class="icon-reject icon-button remove-statement-sensory"></span>
                </div>
            </div>
            @*END TEMPLATE STATEMENT SENSORY*@
        </div>
    </div>




    <div class="scores-sensory">
        @*START HEADER SCORE-SENSORY*@
        <div class="row">
            <div class="col-md-1 text-center">
                No
            </div>
            <div class="col-md-5 text-left">
                Score Word
            </div>
            <div class="col-md-5 text-left">
                Start Value
            </div>
            <div class="col-md-1 text-center">
                <span class="icon-add icon-button" id="button_add_score_sensory"></span>
            </div>
        </div>
        @*END HEADER SCORE-SENSORY*@
        <div id="scores-sensory-container">
            @*START TEMPLATE SCORE-SENSORY*@
            <div class="row score score-sensory template" style="display:none;">
                <div class="col-md-1 center-vertical">
                    <span class="score-no">XX</span>
                </div>
                <div class="col-md-5 text-center">
                    <input type="text" name="input-score-word">
                </div>
                <div class="col-md-5 text-center">
                    <input type="text" name="input-score-value">
                </div>
                <div class="col-md-1 text-center center-vertical">
                    <span class="icon-reject icon-button remove-score-sensory"></span>
                </div>
            </div>
            @*END TEMPLATE SCORE-SENSORY*@
        </div>
    </div>
</div>
@*END ASSESSMENT SENSORY*@