        $.ajax
                    ({
                        method: "GET",
                        url: "/api/assessment/getAllAssessmentList",

                        success: function (data) {
                            console.log(data);

                            var output = [], l = data.length, i;
                            var cekBinusianID = "";


                            for (i = 0 ; i < l ; i++) {
                                console.log(data[i].ResultAssessments);
                          //      output.push(appendDataTableRows((i + 1), data[i].AssessmentTitle, data[i].AssessmentType.AssessmentType, data[i].LastUpdate, data[i].AssessmentID, data[i].AssessmentType.AssessmentTypeID));

                                if (data[i].ResultAssessments.length != 0) {
                                    if (data[i].ResultAssessments[0].BinusianID == "bn190151515") {
                                        cekBinusianID = "ada";
                                        output.push(appendDataTableRows((i + 1), data[i].AssessmentTitle, data[i].AssessmentType.AssessmentType, data[i].LastUpdate, data[i].AssessmentID, data[i].AssessmentType.AssessmentTypeID, cekBinusianID));
                                    }
                                    else {
                                        cekBinusianID = "tidakada";
                                        output.push(appendDataTableRows((i + 1), data[i].AssessmentTitle, data[i].AssessmentType.AssessmentType, data[i].LastUpdate, data[i].AssessmentID, data[i].AssessmentType.AssessmentTypeID, cekBinusianID));
                                    }
                                } else {
                                    cekBinusianID = "tidakada";
                                    output.push(appendDataTableRows((i + 1), data[i].AssessmentTitle, data[i].AssessmentType.AssessmentType, data[i].LastUpdate, data[i].AssessmentID, data[i].AssessmentType.AssessmentTypeID, cekBinusianID));
                                }

                                $table = $('#myTable').DataTable();
                                $table.clear();
                                $table.rows.add(output);
